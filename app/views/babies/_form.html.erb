<%= form_for @baby do |f| %>
  <fieldset>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </fieldset>
  <fieldset>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </fieldset>
  <fieldset>
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </fieldset>
  <fieldset>
    <%= f.label :birth_date %>
    <%= f.text_field :birth_date %>
  </fieldset>
  <%= f.submit %>
<% end %>
